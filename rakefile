task :default => :index

task :index do
  text = File.read("src/countdown.html")
  replace = text.gsub(/\.\.\/src/, "src")
  File.open("./index.html", "w") {|file| file.puts replace}
end

task :tar do
  excludes = [".git*", "*.tar.gz"]
  tarCmd = "env COPYFILE_DISABLE=true tar -C .. --exclude=" + excludes.join(" --exclude=") + " -czvf countdown.tar.gz countdown/"
  puts "tarring with: " + tarCmd
  system(tarCmd)
end
